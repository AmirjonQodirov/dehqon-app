<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primer"
    tools:context=".Dialog">

    <TextView
        android:id="@+id/header_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textColor="@color/black"
        android:text="Хуш омадед!"
        android:textSize="50sp"
        android:textStyle="bold" />

    <EditText
        android:layout_marginTop="90dp"
        android:id="@+id/input_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/header_welcome"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:paddingLeft="20dp"
        android:hint="Ному насаби Сардори хоҷагӣ"
        android:inputType="text"
        android:textColorHint="#A8000000" />

    <EditText
        android:id="@+id/farm_name"
        android:layout_width="match_parent"
        android:layout_below="@+id/input_name"
        android:hint="Номи хоҷагӣ"
        android:inputType="text"
        android:textColorHint="#A8000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/area_input"
        android:layout_width="match_parent"
        android:layout_below="@+id/farm_name"
        android:hint="Масоҳат (гектар)"
        android:inputType="number"
        android:textColorHint="#A8000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:paddingLeft="20dp" />

    <EditText
        android:id="@+id/telephone"
        android:layout_width="match_parent"
        android:layout_below="@+id/area_input"
        android:hint="Рақами телефон"
        android:inputType="phone"
        android:textColorHint="#80000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:paddingLeft="20dp" />

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/fill_constant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:layout_centerInParent="true"
        android:background="@drawable/ic_go"
        android:textSize="40dp"
        android:textColor="@color/white" />

</RelativeLayout>