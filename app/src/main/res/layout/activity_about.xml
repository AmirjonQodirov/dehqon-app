<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primer"
    tools:context=".About">

    <TextView
        android:id="@+id/usr_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Маълумот дарбораи дехкон:"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:textStyle="bold" />

    <View
        android:id="@+id/hr1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/usr_data"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff" />


    <TextView
        android:id="@+id/usr_name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hr1"
        android:text="Ном ва насаб:"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        />
    <TextView
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/usr_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hr1"
        android:layout_toRightOf="@+id/usr_name_view"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_toEndOf="@+id/usr_name_view"
        />

    <TextView
        android:id="@+id/usr_farm_name_view"
        android:layout_below="@+id/usr_name_view"
        android:text="Номи хоҷагӣ:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/usr_farm_name"
        android:layout_below="@+id/usr_name_view"
        android:layout_toEndOf="@+id/usr_farm_name_view"
        android:layout_toRightOf="@+id/usr_farm_name_view"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/usr_area_view"
        android:layout_below="@+id/usr_farm_name_view"
        android:text="Масохати хоҷагӣ:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/usr_area"
        android:layout_below="@+id/usr_farm_name_view"
        android:layout_toEndOf="@+id/usr_area_view"
        android:layout_toRightOf="@+id/usr_area_view"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        />

    <TextView
        android:id="@+id/usr_phone_view"
        android:layout_below="@+id/usr_area_view"
        android:text="Рақами телефон:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/usr_phone"
        android:layout_below="@+id/usr_area_view"
        android:layout_toEndOf="@+id/usr_phone_view"
        android:layout_toRightOf="@+id/usr_phone_view"
        android:textColor="@color/black"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        />


    <TextView
        android:id="@+id/info_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/usr_phone_view"
        android:gravity="center"
        android:text="Бо мо пайваст шавед:"
        android:textColor="@color/black"
        android:layout_marginTop="90dp"
        android:textSize="25sp"
        android:textStyle="bold" />

    <View
        android:id="@+id/hr2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/info_data"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff" />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/black"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation" />
</RelativeLayout>