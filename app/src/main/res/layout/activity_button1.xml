<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".buttons.Button1"
    android:background="@color/comp"
    >

    <TextView
        android:id="@+id/txt_btn_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Корҳои механикӣ"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        />

    <EditText
        android:layout_marginTop="90dp"
        android:id="@+id/btn1_input_1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/txt_btn_1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:paddingLeft="20dp"
        android:hint="Қитъа"
        android:inputType="text"
        android:textColorHint="#A8000000" />

    <EditText
        android:id="@+id/btn1_input_2"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn1_input_1"
        android:hint="Сана"
        android:inputType="datetime"
        android:textColorHint="#A8000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/btn1_input_3"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn1_input_2"
        android:hint="Фаъолият"
        android:inputType="text"
        android:textColorHint="#A8000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/btn1_input_4"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn1_input_3"
        android:hint="Иҷрокунанда"
        android:inputType="text"
        android:textColorHint="#A8000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>


    <EditText
        android:id="@+id/btn1_input_5"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn1_input_4"
        android:hint="Шахси масъул"
        android:inputType="text"
        android:textColorHint="#A8000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>

    <EditText
        android:id="@+id/btn1_input_6"
        android:layout_width="match_parent"
        android:layout_below="@+id/btn1_input_5"
        android:hint="Хароҷот"
        android:inputType="text"
        android:textColorHint="#A8000000"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/inputs"
        android:layout_height="40dp"
        android:paddingLeft="20dp"/>

    <Button
        android:layout_marginTop="15dp"
        android:id="@+id/btn1_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="+"
        app:cornerRadius="15dp"
        android:textSize="35sp"
        android:layout_centerInParent="true"
        android:textColor="@color/white" />
</RelativeLayout>