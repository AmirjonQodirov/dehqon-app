<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Reports"
    android:background="@color/primer"
    >

    <TextView
        android:id="@+id/reports_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Чадвалхо"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_centerInParent="true"
        />

    <View
        android:id="@+id/reports_hr1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/reports_txt"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#ffffff" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/reports_hr1"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="2dp"
        android:paddingStart="20dp"
        android:paddingEnd="2dp"
        tools:targetApi="lollipop"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        app:iconSize="50dp"
        android:backgroundTint="#BCBCBC"
        android:text="Корҳои механикӣ (pdf)"
        app:cornerRadius="10dp"
        android:id="@+id/btn1_on_report"
        app:icon="@drawable/ic_pdf_file"
        />



    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        app:itemBackground="@color/black"
        app:itemTextColor="@drawable/selector"
        app:itemIconTint="@drawable/selector"
        app:menu="@menu/menu_navigation"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>